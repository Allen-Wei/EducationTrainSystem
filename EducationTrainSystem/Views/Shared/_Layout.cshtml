<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - 华思迈教育学院管理系统</title>
    <link href="~/Styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Styles/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Vendors/jquery-2.1.3.min.js" type="text/javascript"></script>
    <script src="~/Vendors/amplify.min.js"></script>
    <script src="~/Vendors/bootstrap.min.js"></script>

    <style type="text/css">
        * { font-family: 微软雅黑, sans-serif; }

        .edu-footer { margin-top: 50px; }
        .edu-footer .copyright { position: fixed; bottom: 0; width: 100%; padding: 5px; background-color: #f5f5f5; color: #0094ff; }
    </style>

    @RenderSection("header", false)
</head>
<body>
    <div class="container-fluid edu-body">
        @RenderBody()
    </div>
    <div class="edu-footer">
        <div class="copyright">
            <span class="fa fa-copyright"></span> 2015 Education Train System
        </div>
    </div>

    @RenderSection("scripts", required: false)
    
    <script>
        $(document).ready(function () {
            $('body').on('mouseover', '.edu-tooltip', function () {
                $(this).removeClass('edu-tooltip').tooltip('show');
            });
        });

    </script>
</body>
</html>
